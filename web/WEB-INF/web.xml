<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>StockIngredientServlet</servlet-name>
        <servlet-class>com.mg.vokye.Controller.StockIngredientServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StockIngredientServlet</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletVente</servlet-name>
        <servlet-class>com.mg.vokye.Controller.ServletVente</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletVente</servlet-name>
        <url-pattern>/vente</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletChiffreAffaire</servlet-name>
        <servlet-class>com.mg.vokye.Controller.ServletChiffreAffaire</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletChiffreAffaire</servlet-name>
        <url-pattern>/chiffreAffaire</url-pattern>
    </servlet-mapping>

</web-app>
